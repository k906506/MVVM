<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="FragmentViewModel"
            type="com.example.basic_mvvm_fragment.viewmodel.FragmentViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <fragment
            android:id="@+id/firstFragment"
            android:name="com.example.basic_mvvm_fragment.fragment.FirstFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/secondFragment"
            android:name="com.example.basic_mvvm_fragment.fragment.SecondFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/thirdFragment"
            android:name="com.example.basic_mvvm_fragment.fragment.ThirdFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/fourthFragment"
            android:name="com.example.basic_mvvm_fragment.fragment.FourthFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</layout>